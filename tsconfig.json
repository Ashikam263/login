{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/register/page.jsx", "app/api/auth/[...nextauth]/route.jsx", "app/register/page.jsx", "components/UserInfo.tsx", "components/RegisterForm.tsx", "components/LoginForm.tsx", "components/LoginForm.tsx", "components/RegisterForm.tsx", "app/api/auth/[...nextauth]/route.ts", "app/Providers.ts", "app/page.jsx", "app/api/register/route.ts", "app/api/userExists/route.ts", "models/user.ts", "lib/mongodb.ts", "app/dashboard/page.tsx"],
  "exclude": ["node_modules"]
}
